---
// src/components/Carousel.astro

import AnimeCard from './AnimeCard.astro'; // Asegúrate de importar AnimeCard

const { animes } = Astro.props;
---

<div class="carousel">
  <button class="carousel-button left" onClick={() => scrollCarousel('left')}>
    &#10094; <!-- Flecha izquierda -->
  </button>
  <div class="carousel-inner">
    {animes.map((anime) => (
      <AnimeCard title={anime.title} image={anime.image} />
    ))}
  </div>
  <button class="carousel-button right" onClick={() => scrollCarousel('right')}>
    &#10095; <!-- Flecha derecha -->
  </button>
</div>

<style>
  .carousel {
    display: flex; /* Alinea los elementos en una fila */
    align-items: center; /* Centra verticalmente los botones */
    overflow: hidden; /* Oculta el desbordamiento */
  }
  .carousel-inner {
    display: flex; /* Alinea los elementos en una fila */
    overflow-x: auto; /* Permite el desplazamiento horizontal */
    scroll-behavior: smooth; /* Desplazamiento suave */
  }
  .carousel-button {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: white;
  }
  .carousel-button.left {
    margin-right: 10px;
  }
  .carousel-button.right {
    margin-left: 10px;
  }
</style>

<script>
  function scrollCarousel(direction) {
    const carouselInner = document.querySelector('.carousel-inner');
    const scrollAmount = direction === 'left' ? -200 : 200; // Cambia la cantidad según lo necesites
    carouselInner.scrollBy({ left: scrollAmount, behavior: 'smooth' });
  }
</script>